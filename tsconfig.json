{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "es2015", "dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*tests.ts"]
}
